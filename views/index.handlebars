<h1>Eat-Da-Burger!</h1>

<ul>
  {{#each burgers}}
  {{#unless devoured}}
      {{> burgers/burger-block devoured=false}}
    {{/unless}}
  {{/each}}
</ul>

<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <button type="submit" id="submit">Add Burger</button>
</form>